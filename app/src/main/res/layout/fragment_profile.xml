<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/profile_bg"
    tools:context=".UserMenu.ProfileFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#43000000"
        android:layout_centerInParent="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardBackgroundColor="@color/secondColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:drawablePadding="10dp"
                android:text="User Profile"
                android:textColor="@color/primary_white"
                android:textSize="@dimen/_18ssp"
                android:letterSpacing=".2"
                app:drawableStartCompat="@drawable/logosmall" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_below="@id/appBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            android:letterSpacing=".1"
            android:textColor="@color/primary_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30sp"
            android:letterSpacing=".1"
            android:id="@+id/user_name"
            android:textColor="@color/primary_white"/>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="20dp"
                android:paddingStart="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fullname"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_15ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"/>

                <TextView
                    android:id="@+id/fullnameTB"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="my fullname"
                    android:drawablePadding="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:textSize="@dimen/_10ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"
                    app:drawableEndCompat="@drawable/pen_square_18"
                    app:drawableTint="@color/primary_white" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_15ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"/>

                <TextView
                    android:id="@+id/emailTB"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="my email"
                    android:drawablePadding="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/balsamiq_sans"
                    android:textSize="@dimen/_10ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"
                    app:drawableEndCompat="@drawable/pen_square_18"
                    app:drawableTint="@color/primary_white" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_15ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"/>

                <TextView
                    android:id="@+id/ageTB"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="my age"
                    android:drawablePadding="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/balsamiq_sans"
                    android:textSize="@dimen/_10ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"
                    app:drawableEndCompat="@drawable/pen_square_18"
                    app:drawableTint="@color/primary_white" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_15ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"/>

                <TextView
                    android:id="@+id/genderTB"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="my gender"
                    android:drawablePadding="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/balsamiq_sans"
                    android:textSize="@dimen/_10ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"
                    app:drawableEndCompat="@drawable/pen_square_18"
                    app:drawableTint="@color/primary_white" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_15ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"/>

                <TextView
                    android:id="@+id/birthdateTB"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="my Birthdate"
                    android:drawablePadding="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/balsamiq_sans"
                    android:textSize="@dimen/_10ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"
                    app:drawableEndCompat="@drawable/pen_square_18"
                    app:drawableTint="@color/primary_white" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/logoutBtn"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/balsamiq_sans"
                    android:textSize="@dimen/_15ssp"
                    android:letterSpacing=".1"
                    android:textColor="@color/primary_white"
                    app:drawableEndCompat="@drawable/logout"
                    app:drawableTint="@color/primary_white" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>