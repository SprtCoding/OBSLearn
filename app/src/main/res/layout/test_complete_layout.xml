<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/congrats"
            android:id="@+id/anim"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/anim"
            android:layout_centerHorizontal="true"
            android:text="Congrats!"
            android:textSize="25sp"
            android:fontFamily="@font/baloo_chettan"
            android:textColor="@color/black"
            android:id="@+id/title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:text="0/0"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/balsamiq_sans"
            android:textColor="@color/black"
            android:id="@+id/score_total"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_total"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textSize="50sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_chettan"
            android:textColor="@color/black"
            android:id="@+id/score"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score"
            android:layout_centerHorizontal="true"
            android:text="You have a high score!"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/black"
            android:id="@+id/message_lbl"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_lbl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Exit"
            android:textSize="22sp"
            android:fontFamily="@font/baloo_chettan"
            app:cornerRadius="25dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/exit_btn"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>